@{
	Layout = "/Views/Shared/_Layout.cshtml";
}
@model EShop.Models.LoginModel

@if (ViewData.ModelState.Keys.Contains("LoginError")) {
	<div class="alert alert-warning">
		User not found.
	</div>
}
<a asp-action="Register" asp-controller="Account" class="btn-primary btn" style="margin-top:7px">Sign Up</a>

<form method="post" asp-action="Login" asp-controller="Account" asp-anti-forgery="true">
	<div hidden class="validation" asp-validation-summary="All"></div>
	<div class="form-group">
		<label asp-for="Name">Username</label><br />
		<input type="text" placeholder="Enter username" asp-for="Name" class="form-control" />
		<span style="color:red" asp-validation-for="Name"></span>
	</div>
	<div class="form-group">
		<label asp-for="Password">Password</label><br />
		<input asp-for="Password" placeholder="Enter password" class="form-control" />
		<span style="color:red" asp-validation-for="Password"></span>
	</div>
	<input type="submit" value="Sign In" class="btn-primary btn-lg" style="margin-top:3px" />
</form>