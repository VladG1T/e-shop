@{
	Layout = "/Views/Shared/_Layout.cshtml";
}
@model EShop.Models.RegisterModel
@if (ViewData.ModelState.Keys.Contains("RegisterErrorName")) {
	<div class="alert alert-warning">
		Username is already in use.
	</div>
}
@if (ViewData.ModelState.Keys.Contains("RegisterErrorEmail")) {
	<div class="alert alert-warning">
		Email is already in use.
	</div>
}


<form asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
	<div hidden class="validation" asp-validation-summary="All"></div>
	<div>
		<div class="form-group">
			<label asp-for="Name">Username</label><br />
			<input type="text" placeholder="Enter username" asp-for="Name" class="form-control" />
			<span style="color:red" asp-validation-for="Name" ></span>
		</div>
		<div class="form-group">
			<label asp-for="Email">E-mail</label><br />
			<input type="text" placeholder="Enter e-mail" asp-for="Email" class="form-control" />
			<span style="color:red" asp-validation-for="Email"></span>
		</div>
		<div class="form-group">
			<label asp-for="Password">Password</label><br />
			<input asp-for="Password" placeholder="Enter password" class="form-control" />
			<span style="color:red" asp-validation-for="Password"></span>
		</div>
		<div class="form-group">
			<label asp-for="ConfirmPassword">Confirm password</label><br />
			<input asp-for="ConfirmPassword" placeholder="Confirm password" class="form-control" />
			<span style="color:red" asp-validation-for="ConfirmPassword"></span>
		</div>
		<div>
			<input type="submit" value="Sign Up" class="btn-primary btn-lg" style="margin-top:3px" />
		</div>
	</div>
</form>