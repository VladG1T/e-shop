@{
	Layout = "/Views/Shared/_Layout.cshtml";
}

@model EShop.Models.RegisterModel
@if (ViewData.ModelState.Keys.Contains("UpdateAccountErrorEmail")) {
	<div class="alert alert-warning">
		Email is already in use.
	</div>
}

<form asp-action="Update" asp-controller="Account" method="post" asp-anti-forgery="true">
	<div hidden class="validation" asp-validation-summary="All"></div>
	<div>
		<div class="form-group">
			<label asp-for="Name">Username</label><br />
			<input readonly type="text" placeholder="Enter username" asp-for="Name" class="form-control" value="@ViewBag.User.Name" />
			<span style="color:red" asp-validation-for="Name"></span>
		</div>
		<div class="form-group">
			<label asp-for="Email">E-mail</label><br />
			<input type="text" placeholder="Enter e-mail" asp-for="Email" class="form-control" value="@ViewBag.User.Email" />
			<span style="color:red" asp-validation-for="Email"></span>
		</div>
		<div class="form-group">
			<label asp-for="Password">Password</label><br />
			<input asp-for="Password" placeholder="Enter password" class="form-control" value="@ViewBag.User.Password" />
			<span style="color:red" asp-validation-for="Password"></span>
		</div>
		<div class="form-group">
			<label asp-for="ConfirmPassword">Confirm password</label><br />
			<input asp-for="ConfirmPassword" placeholder="Confirm password" class="form-control" />
			<span style="color:red" asp-validation-for="ConfirmPassword"></span>
		</div>
		<div>
			<input type="submit" value="Update" class="btn-primary btn-lg" style="margin-top:3px" />
		</div>
	</div>
</form>